{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {

    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier", "@typescript-eslint"],

  "rules": {
    "prettier/prettier": "error",
    "import/extensions": [
      "error",
      "ignorePackages"
    ],

    "func-names": 0,
    "quotes": 0,
    "comma-dangle": 0,
    "react/jsx-one-expression-per-line": 0
  }
}
